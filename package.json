{
  "name": "claude-wsl",
  "version": "1.2.6",
  "description": "Visual notifications when Claude Code finishes in WSL",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "index.js",
  "bin": {
    "claude-wsl": "bin/claude-wsl-integration.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:run": "vitest run --bail 1",
    "push": "./scripts/push.sh",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "test:watch": "vitest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "task": "backlog task",
    "task:list": "backlog task list",
    "task:create": "backlog task create",
    "task:edit": "backlog task edit",
    "task:view": "backlog task"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstacktard/claude-wsl.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "wsl",
    "windows-terminal",
    "notifications",
    "visual-feedback",
    "tab-indicators",
    "toast-notifications",
    "productivity"
  ],
  "author": "fullstacktard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullstacktard/claude-wsl/issues"
  },
  "homepage": "https://github.com/fullstacktard/claude-wsl#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "vitest": "^1.2.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "backlog.md": "latest"
  }
}
